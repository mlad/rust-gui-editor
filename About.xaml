<Window x:Class="RustGuiEditor.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RustGuiEditor"
        mc:Ignorable="d"
        Title="About" Height="400" Width="500" ResizeMode="NoResize">
    <Grid Background="#ce4229" MouseMove="OnMouseMove">
        <Image x:Name="Logo" Source="/images/rustlogo.jpg" Opacity="0.4">
            <Image.Effect>
                <BlurEffect Radius="15"></BlurEffect>
            </Image.Effect>
        </Image>

        <Border>
            <TextBlock FontSize="20" TextAlignment="Center" VerticalAlignment="Center" Padding="20" Foreground="White">
            <Run FontSize="50" FontWeight="Bold">CUI Editor</Run>
            <LineBreak/>
            <Run FontSize="25" FontWeight="Bold">Build 0.01</Run>
            <LineBreak/>
            <Run FontSize="20" FontWeight="Bold">by 7Zip</Run>
            </TextBlock>
        </Border>
    </Grid>
</Window>
